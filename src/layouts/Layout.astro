---
import "../styles/global.css";
import { Navigation } from "../components/Navigation.tsx";
import { Icon } from "astro-icon/components";
import { ClientRouter } from "astro:transitions";

type Props = {
    title: string;
};

const { title } = Astro.props;
const { pathname } = Astro.url;
---

<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta
            name="description"
            content="Blog personal de Avilio Muñoz Vilchez"
        />
        <meta name="author" content="Avilio Muñoz Vilchez" />
        <meta
            name="keywords"
            content="blog, personal, avilio, muñoz, economista, abogado, ciencia, investigación"
        />
        <title>Avilio Muñoz - {title}</title>
        <link rel="icon" type="image/svg" href="/favicon.svg" />
        <ClientRouter />
    </head>
    <body
        class="max-w-5xl pt-10 pb-5 mx-auto p-4 flex flex-col md:flex-row gap-4 px-8 bg-red-200"
    >
        <aside class="w-full md:w-60 flex flex-col gap-2 md:fixed mb-4">
            <img
                src="/foto-papi-ia-cara.jpg"
                alt="Avatar"
                class="size-16 rounded-lg mb-4 border-2 border-white object-cover shadow-md"
            />
            <h1 class="text-2xl font-bold">Avilio Muñoz V.</h1>
            <p class="text-sm text-gray-700 mb-2 mt-1 text-wrap max-w-max">
                Economista y Abogado, MSc en Catastro y Avalúo Inmobiliario
                Urbano, Esp. en Metodología de la Investigación, Esp. en
                Gerencia Tributaria, curioso de la ciencia.
            </p>
            <div
                class="flex border border-stone-200 py-2 px-3 rounded-md w-fit gap-2 items-center bg-white"
            >
                <div
                    class="rounded-full border border-green-200 animate-pulse size-3 flex items-center justify-center"
                >
                    <div class="size-2 bg-green-500 rounded-full"></div>
                </div>
                <p class="font-medium text-sm">Disponible para trabajar</p>
            </div>
            <h3 class="mt-4 text-sm font-bold">Contacto y redes:</h3>
            <ul class="flex gap-3">
                <a
                    href="https://www.linkedin.com/in/avilio-mu%C3%B1oz-vilchez-173672237/"
                    target="_blank"
                >
                    <Icon
                        name="brand-linkedin"
                        size={24}
                        class="cursor-pointer"
                    />
                </a>
                <a href="https://twitter.com/aviliomv" target="_blank">
                    <Icon name="brand-x" size={24} class="cursor-pointer" />
                </a>
                <a href="https://medium.com/@ajmv2000" target="_blank">
                    <Icon
                        name="brand-medium"
                        size={24}
                        class="cursor-pointer"
                    />
                </a>
                <a href="mailto:ajmv2000@gmail.com" target="_blank">
                    <Icon name="mail" size={24} class="cursor-pointer" />
                </a>
            </ul>
        </aside>

        <main class="w-full md:ml-64">
            <Navigation currentPath={pathname} client:load />
            <slot />
        </main>
    </body>
</html>
