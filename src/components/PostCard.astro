---
import { format } from "@formkit/tempo";
const { post } = Astro.props;
---

<a
    class="border border-stone-200 bg-white rounded-md p-4 w-full flex flex-col-reverse md:flex-row gap-6 hover:shadow-sm transition-all md:h-44"
    href={`/blog/${post.id}`}
>
    <div class="flex flex-col w-full">
        <span class="text-xs text-stone-500 mb-3">
            {format(post.data.pubDate, "DD/MM/YYYY")}
        </span>
        <h3 class="font-black text-lg md:truncate md:line-clamp-2 md:text-wrap">
            {post.data.title}
        </h3>
        <p
            class="text-sm text-stone-600 mt-2 mb-3 truncate text-ellipsis text-wrap line-clamp-2"
        >
            {post.data.description}
        </p>
    </div>
    <div
        class="w-full md:w-80 h-44 md:h-full rounded-lg overflow-hidden border-4 border-white shadow-sm"
    >
        <img
            src={post.data.imagePath}
            alt={post.data.title}
            class="w-full h-full object-fill"
        />
    </div>
</a>
